{
  "name": "tvwallaushop",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "contracts",
    "backend",
    "frontend"
  ],
  "scripts": {
    "nx": "nx",
    "install:all": "npm install",
    "ci": "npm ci",
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "dev": "nx run-many -t serve --parallel --output-style=stream",
    "stop": "nx run-many -t stop --parallel --output-style=stream && nx daemon --stop",
    "clear": "nx run repo-tools:clear --output-style=stream && nx run-many -t clear --parallel --output-style=stream",
    "deps:reset": "nx run repo-tools:deps:reset --output-style=stream && nx run-many -t deps:reset --parallel --output-style=stream",
    "graph": "nx graph",
    "docker:build": "nx run-many -t docker:build --parallel --output-style=stream",
    "infra:up": "nx run infra:compose:up --output-style=stream",
    "infra:down": "nx run infra:compose:down --output-style=stream",
    "infra:logs": "nx run infra:compose:logs --output-style=stream",
    "stack:up": "npm run docker:build && npm run infra:up",
    "stack:down": "npm run infra:down"
  },
  "devDependencies": {
    "nx": "^19.8.3",
    "rimraf": "^6.0.1"
  }
}
