<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.tvwallau.shop</groupId>
    <artifactId>tvwallau-shop</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>python_ai_service</artifactId>
  <packaging>pom</packaging>

  <properties>
    <python.executable>${project.basedir}/.venv/Scripts/python.exe</python.executable>
    <killport.script>${maven.multiModuleProjectDirectory}/scripts/kill-port.ps1</killport.script>
  </properties>

  <profiles>

    <profile>
      <id>dev-start</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>python-start</id>
                <phase>validate</phase>
                <goals><goal>exec</goal></goals>
                <configuration>
                  <workingDirectory>${project.basedir}</workingDirectory>
                  <executable>${python.executable}</executable>
                  <arguments>
                    <argument>-m</argument>
                    <argument>uvicorn</argument>
                    <argument>app.main:app</argument>

                    <argument>--reload</argument>
                    <argument>--reload-dir</argument>
                    <argument>${project.basedir}</argument>

                    <argument>--host</argument><argument>0.0.0.0</argument>
                    <argument>--port</argument><argument>8000</argument>
                  </arguments>
                  <inheritIo>true</inheritIo>
                  <async>true</async>
                  <asyncDestroyOnShutdown>true</asyncDestroyOnShutdown>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>dev-stop</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>python-stop</id>
                <phase>validate</phase>
                <goals><goal>exec</goal></goals>
                <configuration>
                  <executable>powershell.exe</executable>
                  <arguments>
                    <argument>-NoProfile</argument>
                    <argument>-ExecutionPolicy</argument>
                    <argument>Bypass</argument>
                    <argument>-File</argument>
                    <argument>${killport.script}</argument>
                    <argument>-Ports</argument>
                    <argument>8000</argument>
                  </arguments>
                  <inheritIo>true</inheritIo>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>dev-restart</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>python-restart-stop</id>
                <phase>validate</phase>
                <goals><goal>exec</goal></goals>
                <configuration>
                  <executable>powershell.exe</executable>
                  <arguments>
                    <argument>-NoProfile</argument>
                    <argument>-ExecutionPolicy</argument>
                    <argument>Bypass</argument>
                    <argument>-File</argument>
                    <argument>${killport.script}</argument>
                    <argument>-Ports</argument>
                    <argument>8000</argument>
                  </arguments>
                </configuration>
              </execution>

              <execution>
                <id>python-restart-start</id>
                <phase>validate</phase>
                <goals><goal>exec</goal></goals>
                <configuration>
                  <workingDirectory>${project.basedir}</workingDirectory>
                  <executable>${python.executable}</executable>
                  <arguments>
                    <argument>-m</argument><argument>uvicorn</argument><argument>app.main:app</argument>
                    <argument>--reload</argument><argument>--reload-dir</argument><argument>${project.basedir}</argument>
                    <argument>--host</argument><argument>0.0.0.0</argument>
                    <argument>--port</argument><argument>8000</argument>
                  </arguments>
                  <inheritIo>true</inheritIo>
                  <async>true</async>
                  <asyncDestroyOnShutdown>true</asyncDestroyOnShutdown>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>setup</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>python-setup</id>
                <phase>validate</phase>
                <goals><goal>exec</goal></goals>
                <configuration>
                  <workingDirectory>${project.basedir}</workingDirectory>
                  <executable>powershell.exe</executable>
                  <arguments>
                    <argument>-NoProfile</argument>
                    <argument>-ExecutionPolicy</argument>
                    <argument>Bypass</argument>
                    <argument>-Command</argument>
                    <argument>
                      if (-not (Test-Path ".venv")) { py -m venv .venv };
                      .\.venv\Scripts\python -m pip install -U pip;
                      if (Test-Path "requirements.txt") { .\.venv\Scripts\python -m pip install -r requirements.txt }
                      else { .\.venv\Scripts\python -m pip install "uvicorn[standard]" fastapi };
                      exit 0
                    </argument>
                  </arguments>
                  <inheritIo>true</inheritIo>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

  </profiles>
</project>
